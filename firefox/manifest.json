{
    "manifest_version": 2,
    "name": "YouTube Detox",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": {
            "19": "assets/icons/placeholder.gif"
        },
        "default_title": "Who is this?"
    },
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content/shorts_blocker.js"],
            "run_at": "document_idle"
        },
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content/feed_blocker.js"],
            "run_at": "document_idle"
        }
    ]
}